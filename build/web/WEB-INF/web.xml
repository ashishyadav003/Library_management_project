        <url-pattern>/AdminActionsServlet</url-pattern>
    </servlet-mapping>
    <!-- Servlet for User Actions -->
    <servlet>
        <servlet-name>UserActionsServlet</servlet-name>
        <servlet-class>com.library.servlets.UserActionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserActionsServlet</servlet-name>
        <url-pattern>/UserActionsServlet</url-pattern>
    </servlet-mapping>
