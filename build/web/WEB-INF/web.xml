        <servlet-class>com.library.servlets.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>com.library.servlets.TransactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateReportServlet</servlet-name>
        <servlet-class>com.library.servlets.GenerateReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <!-- Servlet for Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.library.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
